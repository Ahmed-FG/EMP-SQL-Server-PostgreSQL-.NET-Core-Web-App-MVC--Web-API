@using EmployeeManagement.Models
@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Home Page";
}
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New Employee Record", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EmpId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmpFname)
        </th>
